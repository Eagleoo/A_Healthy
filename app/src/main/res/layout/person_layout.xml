<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#CEFFCE"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:layout_gravity="right"
            android:id="@+id/setting"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/imag1"
            android:layout_marginTop="20dp"
            android:id="@+id/head" />
        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_gravity="center"
            android:paddingTop="15dp"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <RadioButton
            android:id="@+id/order"
            style="@style/myradiobutton"
            android:drawableTop="@drawable/order"
            android:text="全部订单"
            android:textSize="15sp"/>
        <RadioButton
            android:id="@+id/payment"
            style="@style/myradiobutton"
            android:drawableTop="@drawable/pay1"
            android:text="待付款"
            android:textSize="15dp"/>

        <RadioButton
            android:id="@+id/issend"
            style="@style/myradiobutton"
            android:drawableTop="@drawable/send1"
            android:text="待发货"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/isreceive"
            style="@style/myradiobutton"
            android:drawableTop="@drawable/recevive"
            android:text="待收货"
            android:textSize="15sp"/>


    </RadioGroup>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/per"/>
        <TextView
            android:id="@+id/per_message"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="@string/personal"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/collection"/>
        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="@string/collection"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:id="@+id/collect"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/dynamic"/>
        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="发布动态"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:id="@+id/insertdy"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
